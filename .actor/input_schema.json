{
    "title": "CheerioCrawler Template",
    "type": "object",
    "schemaVersion": 1,
    "properties": {
        "query": {
            "title": "Query",
            "type": "string",
            "description": "Query for torrent search",
            "editor": "textfield"
        },
        "scrapers": {
            "title": "Scrapers",
            "type": "array",
            "description": "Select what scrapers you want to use. All available scrapers will be used if none selected.",
            "editor": "select",
            "items": {
                "type": "string",
                "enum": [
                    "gloTorrents",
                    "thePirateBay",
                    "limeTorrents",
                    "nyaa",
                    "solidTorrents"
                ],
                "enumTitles": [
                    "Glo Torrents",
                    "The Pirate Bay",
                    "Lime Torrents",
                    "Nyaa Torrents",
                    "Solid Torrents"
                ]
            }
        },
        "pageLimit": {
            "title": "Page limit",
            "type": "integer",
            "description": "How many pages should be scraped on each torrent site",
            "editor": "number",
            "minimum": 1
        },
        "minSeedsForNextPage": {
            "title": "Minimum seeds for next page",
            "type": "integer",
            "description": "Scraper will not scrape next page if the last torrent on current page has less seeds than this value",
            "editor": "number",
            "minimum": 1
        }
    }
}
