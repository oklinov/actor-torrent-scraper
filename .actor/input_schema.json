{
    "title": "CheerioCrawler Template",
    "type": "object",
    "schemaVersion": 1,
    "properties": {
        "query": {
            "title": "Query",
            "type": "string",
            "prefill": "debian",
            "description": "Query for torrent search",
            "editor": "textfield"
        },
        "torrentSites": {
            "title": "Torrent Sites",
            "type": "array",
            "description": "Select what sites you want to scrape. If none selected, then all sites will be used",
            "editor": "select",
            "default": [
                "gloTorrents",
                "thePirateBay",
                "limeTorrents",
                "nyaa",
                "solidTorrents"
            ],
            "items": {
                "type": "string",
                "enum": [
                    "gloTorrents",
                    "thePirateBay",
                    "limeTorrents",
                    "nyaa",
                    "solidTorrents"
                ],
                "enumTitles": [
                    "Glo Torrents",
                    "The Pirate Bay",
                    "Lime Torrents",
                    "Nyaa Torrents",
                    "Solid Torrents"
                ]
            }
        },
        "pageLimit": {
            "title": "Page limit",
            "type": "integer",
            "description": "How many pages should be scraped on each torrent site",
            "editor": "number",
            "minimum": 1
        },
        "minSeedsForNextPage": {
            "title": "Minimum seeds for next page",
            "type": "integer",
            "description": "Scraper will not scrape next page if the last torrent on current page has less seeds than this value",
            "editor": "number",
            "minimum": 1
        }
    },
    "required": ["query"]
}
